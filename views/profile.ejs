<!doctype html>
<html>
<head>
    <title>21 Savage Fan Site</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="style.css">
</head>
<body>
<div class="container">
    <div class="page-header text-center">
        <h1><%= user.local.email%>'s' 8Ball Diary</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">

        <!-- LOCAL INFORMATION -->
        <div class="col-sm-6">
          <h3>8Ball Dairy </h3>
          <ul class="messages">
          <% for(var i=0; i < diary.length; i++) {%>
           <% if(diary[i].name === user.local.email ) {%>
            <% pick = Math.floor(Math.random()*6)%>
            <li class="message">
              <!-- <span><%= diary[i].name %></span> -->
              <span><%= diary[i].q %></span>
              <span class = "answer"><%- diary[i].a[pick] %></span>
              <!-- <span><i class="fa fa-thumbs-up" aria-hidden="true"></i></span>
              <span><i class="fa fa-thumbs-down" aria-hidden="true"></i></span> -->
              <span><i class="fa fa-trash" aria-hidden="true"></i></span>
            </li>
            <% } %>
          <% } %>
          </ul>

          <h2>Ask your Question</h2>
        <% if (user.local.email) { %>
          <form action="/diary" method="POST">
            <input type="text" value="<%= user.local.email %>" name="name" style="display:none;">
            <input type="text" placeholder="Question?" name="msg">
            <button type="submit">Submit</button>
          </form>
        </div>
        <% } %>

</div>

<script src="main.js"></script>

</body>
</html>
